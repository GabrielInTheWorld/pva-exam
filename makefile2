CC=g++
LIBS=-ltbb

TARGET ?= pva.out
SRC_DIRS ?= ./

SRC := ./*.cpp
SRCS := $(shell find $(SRC_DIRS) -name *.cpp)
OBJS := $(addsuffix .o,$(basename $(SRC)))
DEPS := $(OBJS:.o=.d)

INC_DIRS := $(shell find $(SRC_DIRS) -type d)
INC_FLAGS := $(addprefix -I,$(INC_DIRS))


CPPFLAGS ?= $(INC_FLAGS) -MMD -MP

$(TARGET): $(OBJS)
	$(CC) $(LDFLAGS) $(OBJS) -o $@ $(LIBS)

.PHONY: clean
clean:
	$(RM) $(TARGET) $(OBJS) $(DEPS)

-include $(DEPS)

CC=g++
CFLAGS=-I.

pva: ./*.cpp
    $(CC) -o pva pva-exam.cpp comma-free-scheduler.cpp builder.cpp comma-free-task.cpp comma-free-parallel.cpp -ltbb

clean:
    $(RM) $(TARGET) $(OBJS) $(DEPS)

-include $(DEPS)